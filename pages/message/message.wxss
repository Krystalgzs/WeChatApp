.message{
  min-height: 100%;
  padding: 40rpx;
  background-color: #f0f0f0;
}
.message .free{
  display: flex;
  flex-direction: column; 
  border: 1px solid #ddd;
  border-radius: 20rpx;
  background-color: #fff;
  padding: 20rpx;
  margin-bottom: 40rpx;
}
.message .free .title1{
  font-size:20px;
  font-weight: 580;
}
.message .free .title2{
  margin-top: 10rpx;
  color: #9e867f;
  height: 40rpx;
  font-size:14px;
  border-bottom: 1rpx solid #eee;
}
.message image{
  width: 100%;
  height: 380rpx; 
}
.message .free .title3{
  color: #4f4047;
  height: 40rpx;
  font-size:16px;
  border-bottom: 1rpx solid #eee;
  padding-bottom: 10rpx;
}
.message .free .readAll{
  padding-top: 10rpx;
  font-size: 14px;
  color: #2b3737;
  display: flex;
  justify-content: space-between;
}

